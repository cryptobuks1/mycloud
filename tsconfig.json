{
  "compilerOptions": {
    "watch": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        // "node_modules/*",
        "src/types/*"
      ],
      "@tradle/in-house-bot": ["src/in-house-bot/index.ts"],
      "@tradle/in-house-bot/*": ["src/in-house-bot/*"]
    },
    "types": [
      "node",
      "aws-sdk",
      "sinon",
      "lodash",
      "graphql",
      "koa",
      "lru-cache",
      "superagent",
      "@tradle/dynamodb",
      "@tradle/aws-client-factory",
      "@tradle/aws-common-utils",
      "@tradle/aws-iam-client",
      "@tradle/aws-s3-client",
      "@tradle/aws-cloudwatch-client",
      "@tradle/aws-cloudformation-client",
      "@tradle/aws-sns-client",
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*.d.ts", "**/*.js", "src/test/mock/"],
  "compileOnSave": false
}
